<% provide(:title, @user.name) %>                                               <%#ユーザページタイトルにユーザ名を挿入%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user,size:50 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-8">                                                        <%#マイクロポスト表示%>
    <% if @user.microposts.any? %>                                              <%#マイクロポストがあれば%>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>                       <%#マイクロポストの数？%>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
  
</div>