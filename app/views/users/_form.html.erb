  <%= form_for(@user, url: yield(:url)) do |f| %>
    <%= render 'shared/error_messages', object: @user %>                        <%#エラーメッセージがあれば表示%>
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>                           <%#name属性変更用%>
    
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>                         <%#email属性変更用%>
    
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>                   <%#password属性変更用%>
    
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>       <%#password確認用%>
    
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>               <%#保存または更新ボタン%>
  <% end %>